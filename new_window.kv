WindowManager:
    MainWindow:
    MatWindow:


<MainWindow>:
    name: "main"
    
    size: 300, 800
    GridLayout:
        cols: 3
        row_default_height: 32
        row_force_default: True
        

        Label:
            text: "Next Screen"
            font_size: 15

        Label:
            text: app.cat_name
            font_size: 15

        Button: 
            text: "Next Screen"
            font_size: 15
            on_release: 
                app.root.current = "mat"
                root.manager.transition.direction = "left"

        Button: 
            text: "3"
            font_size: 15
            on_release:

        Button: 
            text: "4"
            font_size: 32
            on_release:

        Button: 
            text: "5"
            font_size: 32
            on_release:

        Button: 
            text: "6"
            font_size: 32
            on_release:

<MatWindow>:
    name: "mat"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "sec sc"
            font_size: 32

        Button: 
            text: "sec sc"
            font_size: 32
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"